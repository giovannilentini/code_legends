<div class="w-[330px] absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
  <div class="relative w-[320px] bg-white shadow-lg rounded-lg">
    <div class="w-full bg-[#fdfdfd] p-4 rounded-lg shadow-lg">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-blue-500 relative inline-block">
          Sign Up
          <span class="absolute inset-0 flex items-center justify-center">
            <span class="block w-full h-1 bg-gradient-to-r from-[#87314e] to-[#df405a] opacity-50 rounded-full transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 ease-in-out"></span>
          </span>
        </h1>
      </div>

      <%= form_with url: users_path, method: :post, model: @user, local: true, class: 'space-y-6' do |form| %>
        <div class="flex flex-col">
          <label for="username" class="text-gray-700 text-sm font-medium">Username</label>
          <%= form.text_field :username, required: true, class: "mt-1 h-12 px-4 bg-gray-100 border rounded-lg text-gray-800 text-base shadow-sm focus:bg-[#f8f8c6] focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div class="flex flex-col">
          <label for="email" class="text-gray-700 text-sm font-medium">E-mail</label>
          <%= form.email_field :email, required: true, class: "mt-1 h-12 px-4 bg-gray-100 border rounded-lg text-gray-800 text-base shadow-sm focus:bg-[#f8f8c6] focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div class="flex flex-col">
          <label for="password" class="text-gray-700 text-sm font-medium">Password</label>
          <%= form.password_field :password, required: true, class: "mt-1 h-12 px-4 bg-gray-100 border rounded-lg text-gray-800 text-base shadow-sm focus:bg-[#f8f8c6] focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <%= form.submit 'Sign Up', class: 'w-full h-12 mt-4 bg-blue-500 text-white font-bold rounded-lg shadow-md cursor-pointer hover:bg-blue-600' %>
      <% end %>
      <div class="flex items-center justify-center my-1">
        <div class="border-t border-gray-300 flex-grow"></div>
        <span class="mx-4 text-gray-500">or</span>
        <div class="border-t border-gray-300 flex-grow"></div>
      </div>
        <%= button_to '/auth/auth0/', method: :post, data: { turbo: false }, class: 'w-full h-12 bg-trasparent text-gray-700 border border-gray-700 font-bold rounded-lg shadow-md flex items-center justify-center gap-4 cursor-pointer hover:bg-gray-200' do %>
        Sign up with:
        <img width="24" height="24" src="https://img.icons8.com/ios-filled/100/github.png" alt="GitHub" class="inline-block" />
        <img width="24" height="24" src="https://img.icons8.com/color/96/google-logo.png" alt="Google" class="inline-block" />
        <img width="24" height="24" src="https://img.icons8.com/fluency/96/facebook-new.png" alt="Facebook" class="inline-block" />
      <% end %>
      <p class="text-gray-700 text-sm mt-4">Already have an account? <%= link_to 'Log in', login_path, class: 'text-blue-500 hover:underline' %></p>
    </div>
  </div>
</div>
